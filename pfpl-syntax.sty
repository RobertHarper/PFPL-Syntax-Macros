\NewDocumentCommand{\outEx}{s O{t} O{\tau} m}{\Abbrt{#1}{\Opn{out}}[\Abs(#2){#3}]{#4}}
\NewDocumentCommand{\genEx}{s O{t} O{\tau} O{\sigma} m m m}{\Abbrt{#1}{\Opn{gen}}[\Abs(#2){#3}\sep #4]{#5\sep \Abs(#6){#7}}}

